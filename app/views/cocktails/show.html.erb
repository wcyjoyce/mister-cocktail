<h2><%= @cocktail.name %></h2>
<%= cl_image_tag @cocktail.photo, height: 400, width: 300, crop: :fill %>

<h3>Description:</h3>
<p><%= @cocktail.description %></p>

<h3>Ingredients:</h3>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> of <%= dose.ingredient.name %>
      <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to delete this dosage?"} do %>
      <i class="fa fa-trash-o" aria-hidden-"true"></i>
    <% end %>
    </li>
  <% end %>
</ul>

<div class="link">
  <!-- Back to Cocktail List -->
  <div>
    <%= link_to cocktails_path do %>
      <i class="fa fa-undo" aria-hidden="true"></i> Back to List
    <% end %>
  </div>
  <!-- Add Ingredient -->
  <div>
    <%= link_to new_cocktail_dose_path(@cocktail) do %>
      <i class="fa fa-plus" aria-hidden="true"></i> Add Ingredient
    <% end %>
  </div>
  <!-- Edit Cocktail Description -->
  <div>
    <%= link_to edit_cocktail_path(@cocktail) do %>
      <i class="fa fa-pencil" aria-hidden="true"></i> Edit Cocktail Description
    <% end %>
  </div>
</div>
