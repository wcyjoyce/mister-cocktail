<h2>Cocktail List</h2>

<ul>
<% @cocktails.each do |cocktail| %>
  <li>
    <%= link_to cocktail.name, cocktail_path(cocktail) %>
    <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure you want to delete this cocktail?"} do %>
      <i class="fa fa-trash-o" aria-hidden-"true"></i>
    <% end %>
  </li>
<% end %>
</ul>

<div class="link">
  <%= link_to new_cocktail_path do %>
    <i class="fa fa-plus" aria-hidden="true"></i> Add New Cocktail
  <% end %>
</div>
