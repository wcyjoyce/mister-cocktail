<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-md-3 col-sm-6">
        <%= cl_image_tag(cocktail.photo, width: 200, height: 150, crop: :fill) %>
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
        <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure you want to delete this cocktail?"} do %>
          <i class="fa fa-trash-o" aria-hidden-"true"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
