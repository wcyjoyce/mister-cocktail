<h2><%= @cocktail.name.upcase %></h2>
<div class="display">
  <div class="image">
    <%= cl_image_tag @cocktail.photo, height: 400, width: 300, crop: :fill %>
  </div>

  <!-- Description -->
  <div class="description padding">
    <h5><strong>DESCRIPTION</h5></strong>
    <div class="link">
      <%= link_to edit_cocktail_path(@cocktail) do %>
        <i class="fa fa-pencil" aria-hidden="true"></i> EDIT DESCRIPTION
      <% end %>
    </div>
    <br>
    <p><%= @cocktail.description %></p>
  </div>

  <!-- Ingredients -->
  <div class="ingredients padding">
    <h5><strong>INGREDIENTS</h5></strong>
    <div class="link">
      <%= link_to new_cocktail_dose_path(@cocktail) do %>
        <i class="fa fa-plus" aria-hidden="true"></i> ADD INGREDIENT
      <% end %>
    </div>
    <br>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %> of <%= dose.ingredient.name %>
          <!-- Link: Edit Ingredient -->
          <%= link_to edit_cocktail_dose_path(@cocktail, dose) do %>
            (<i class="fa fa-pencil" aria-hidden="true"></i>
          <% end %>
          <!-- Link: Delete Ingredient -->
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to delete this entry?"} do %>
          <i class="fa fa-trash-o" aria-hidden-"true"></i>)
        <% end %>
        </li>
      <% end %>
    </ul>
</div>

<!-- Ratings -->
<div class="ratings padding">
  <h5><strong>RATINGS</h5></strong>
  <i class="fa fa-star" aria-hidden="true"></i>
  <i class="fa fa-star" aria-hidden="true"></i>
  <i class="fa fa-star" aria-hidden="true"></i>
  <i class="fa fa-star-o" aria-hidden="true"></i>
  <i class="fa fa-star-o" aria-hidden="true"></i>
</div>
